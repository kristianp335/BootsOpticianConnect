          "defaultValue": "white",
          "typeOptions": {
            "validValues": [
              {
                "label": "White Background",
                "value": "white"
              },
              {
                "label": "Primary Blue Background",
                "value": "primary"
              }
            ]
          }
        },
        {
          "name": "companyName",
          "label": "Company Name",
