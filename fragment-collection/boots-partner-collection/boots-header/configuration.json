{
  "fieldSets": [
    {
      "fields": [
        {
          "name": "showUserProfile",
          "label": "Show User Profile",
          "description": "Display user profile dropdown in header",
          "type": "checkbox",
          "defaultValue": true
        },
        {
          "name": "showNotifications",
          "label": "Show Notifications",
          "description": "Display notifications bell icon",
          "type": "checkbox",
          "defaultValue": true
        },
        {
          "name": "showSearch",
          "label": "Show Search Button",
          "description": "Display the search button in the header with modal overlay",
          "type": "checkbox",
          "defaultValue": true
