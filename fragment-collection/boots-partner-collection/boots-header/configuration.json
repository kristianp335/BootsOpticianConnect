        {
          "name": "navigationMenuId",
          "label": "Navigation Menu ID",
          "description": "ID of the Liferay navigation menu to use",
          "type": "text",
          "defaultValue": "primary-menu"
        },
        {
          "name": "sitePrefix",
          "label": "Site Prefix",
          "description": "URL prefix to prepend to all navigation menu links (e.g., /web/boots-partners)",
